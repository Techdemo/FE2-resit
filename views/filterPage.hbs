<form class="filter-form" action="/filter" id="ingredientForm" method="POST" onsubmit="searchIngredients();">
  <fieldset class="filter-form-fieldset">
    <input type="checkbox" id="breadcrumbs" class="visually-hidden" name="ingredients" value="Breadcrumbs">
    <label for="breadcrumbs">Breadcrumbs</label>
  </fieldset>
  <fieldset class="filter-form-fieldset">
    <input type="checkbox" id="bacon" class="visually-hidden" name="ingredients" value="Bacon">
    <label for="bacon">Bacon</label>
  </fieldset>
  <fieldset class="filter-form-fieldset">
    <input type="checkbox" id="carrots" class="visually-hidden" name="ingredients" value="Carrots">
    <label for="carrots">Carrots</label>
  </fieldset>
  <fieldset class="filter-form-fieldset">
    <input type="checkbox" id="chickpeas" class="visually-hidden" name="ingredients" value="Chickpeas">
    <label for="chickpeas">Chickpeas</label>
  </fieldset>
  <fieldset class="filter-form-fieldset">
    <input type="checkbox" id="tomatoes" class="visually-hidden" name="ingredients" value="Tomatoes">
    <label for="tomatoes">Tomatoes</label>
  </fieldset>
  <fieldset class="filter-form-fieldset">
    <input type="checkbox" id="garlic" class="visually-hidden" name="ingredients" value="Garlic">
    <label for="garlic">Garlic</label>
  </fieldset>
  <fieldset class="filter-form-fieldset">
    <input type="checkbox" id="fries" class="visually-hidden" name="ingredients" value="Fries">
    <label for="fries">Fries</label>
  </fieldset>
  <fieldset class="filter-form-fieldset">
    <input type="submit" value="Search">
    <a class="filter-switch" href="/">Search on name of a meal</a>
  </fieldset class="filter-form-fieldset">
</form>
{{ message }}
<ul id="cardList">
  {{#if mealFilterList}}
    {{> filterList }}
  {{/if}}
</ul>