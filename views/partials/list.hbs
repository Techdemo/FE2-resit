  <noscript>
    {{#if next_page}}
        <a href="/page/{{ next_page }}/search/{{ query }}">Next page</a>
    {{/if}}
    {{#if prev_page}}
      {{ log prev_page}}
        <a href="/page/{{ prev_page }}/search/{{ query }}">Previous page</a>
    {{/if}}
    <p>Total pages: {{total_pages}}</p>
    <p>Number of results: {{total}}</p>   {{!-- <a href="/page/{{ page }}/{{ query }}">Page Number {{ page }}</a> --}}
  </noscript>
  {{#each mealList}}
    <li class="lazy">
      <section>
        <header>
          <img src={{strMealThumb}} height="275" width="275">
          <h2>{{strMeal}}</h2>
          <h3>Category: {{strCategory}}</h3>
          <h4>Area: {{strArea}}</h4>
        </header>
        <body>
          <p>{{strInstructions}}</p>
        </body>
        <footer>
          <a class="button-primary" href={{strSource}}>Source</a>
        </footer>
      </section>
    </li>
  {{/each}}